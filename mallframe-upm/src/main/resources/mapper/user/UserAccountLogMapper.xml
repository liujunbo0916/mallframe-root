<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easaa.user.dao.UserAccountLogMapper">
	<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>
	
	<sql id="condition">
		<if test="pd.id != null">
			and id = #{pd.id}
		</if>
		<if test="pd.user_id != null">
			and user_id = #{pd.user_id}
		</if>
		<if test="pd.admin_name != null">
			and admin_name = #{pd.admin_name}
		</if>
		<if test="pd.log_money != null">
			and log_money = #{pd.log_money}
		</if>
		<if test="pd.log_points != null">
			and log_points = #{pd.log_points}
		</if>
		<if test="pd.log_type != null">
			and log_type = #{pd.log_type}
		</if>
		<if test="pd.log_value != null">
			and log_value = #{pd.log_value}
		</if>
		<if test="pd.log_time != null">
			and log_time = #{pd.log_time}
		</if>
		<if test="pd.log_note != null">
			and log_note = #{pd.log_note}
		</if>
		<if test="pd.sys_note != null">
			and sys_note = #{pd.sys_note}
		</if>
	</sql>

	<select id="selectByPage" resultType="pd"  parameterType="page">
		select * from t_user_account_log where 1=1
			<include refid="condition"></include>
	</select>

	<select id="selectByMap" resultType="pd"  parameterType="pd">
		select * from t_user_account_log where 1=1
			<include refid="condition"></include>
			order by log_time desc
	</select>

	<select id="selectById" resultType="pd"  parameterType="Integer">
		SELECT * from t_user_account_log where id = #{id}
	</select>

	<insert id="insert" parameterType="pd">
		insert into t_user_account_log (user_id,admin_name,log_money,log_points,log_type,log_value,log_time,log_note,sys_note,log_symbol,log_order)
		values (#{user_id},#{admin_name},#{log_money},#{log_points},#{log_type},#{log_value},#{log_time},#{log_note},#{sys_note},#{log_symbol},#{log_order})
	</insert>

	<update id="update" parameterType="pd">
		update t_user_account_log <set>
		<if test="user_id != null">
			user_id = #{user_id},
		</if>
		<if test="admin_name != null">
			admin_name = #{admin_name},
		</if>
		<if test="log_money != null">
			log_money = #{log_money},
		</if>
		<if test="log_points != null">
			log_points = #{log_points},
		</if>
		<if test="log_type != null">
			log_type = #{log_type},
		</if>
		<if test="log_value != null">
			log_value = #{log_value},
		</if>
		<if test="log_time != null">
			log_time = #{log_time},
		</if>
		<if test="log_note != null">
			log_note = #{log_note},
		</if>
		<if test="sys_note != null">
			sys_note = #{sys_note},
		</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete"   parameterType="pd">
		delete from t_user_account_log where 1=1
			<include refid="condition"></include>
	</delete>
	<select id="selectByMoney" resultType="pd"  parameterType="pd">
		select * from t_user_account_log where 1=1
			<include refid="condition"></include>
	</select>
	<select id="selectByPoints" resultType="pd"  parameterType="pd">
		select * from t_user_account_log where 1=1
			<include refid="condition"></include>
	</select>
</mapper>